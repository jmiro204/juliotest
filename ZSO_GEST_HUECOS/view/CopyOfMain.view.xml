<mvc:View controllerName="inetum.ZSO_GEST_HUECOS.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:f="sap.f" xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout"
	>
	<Shell id="shell" appWidthLimited="false">
		<App id="app">
			<pages>
				<Page id="pageID" showHeader="false">
					<content>
						<fb:FilterBar id="fbCabecera" search="onSearch" clear="resetFilters" showClearOnFB="true" showRestoreButton="true" showGoOnFB="true"
							advancedMode="false" filterBarExpanded="true" showFilterConfiguration="false" useToolbar="false">
							<!-- showFilterConfiguration="{= ${device>/system/phone}}"-->
							<fb:filterGroupItems>
								<fb:FilterGroupItem groupName="fbPrincipal" label="{i18n>Sec}" name="grupArtic" partOfCurrentVariant="true" visibleInFilterBar="true">
									<fb:control>
										<MultiInput showValueHelp="true" value="{modelFilter>/grupArti}" liveChange="onSearchLive" submit="onSubmitGrArt"
											valueHelpRequest="handleValueHelpGrupArti" id="INGrArti" valueHelpOnly="false" tokenUpdate="onSearchLive"></MultiInput>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
						<!-- Inicio  Tabla -->
						
						<!--<ScrollContainer id="oScroll" height="600px" vertical="true">-->
							<Table id="tablePrincipal" mode="SingleSelectMaster" width="auto" fixedLayout="false" growingThreshold="7"
								items="{stock_Model>/ProductsZeroSaleSet}" autoPopinMode="false" selectionChange="onAdjust" sticky="ColumnHeaders,HeaderToolbar" inset="false"
								growing="true">
								<!-- Inicio Toolbar Tabla -->
								<headerToolbar>
									<OverflowToolbar>
										<Image id="imgInetum" src="" width="6em"/>
										<Text id="numberOfItemsText" text="" textAlign="Begin" />
										<MultiInput  showValueHelp="true" value="{modelFilter>/grupArti}" liveChange="onSearchLive" submit="onSubmitGrArt"
											valueHelpRequest="handleValueHelpGrupArti" id="INGrArti2" valueHelpOnly="false" tokenUpdate="onSearchLive" width="5em"></MultiInput>
										<ToolbarSeparator/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://excel-attachment" press="exportExcel" tooltip="{i18n>exportExcel}"/>
										<Button id="toggleButton" icon="sap-icon://show" press="onToggleColumnsVisibility" visible="false" />
										<!--<Button icon="sap-icon://download" press="exportXML" visible="false" tooltip="{i18n>exportXML}"/>-->
										
									</OverflowToolbar>
								</headerToolbar>
								<!-- Fin Toolbar Tabla -->
								<!-- Inicio Filas -->
								<items>
									<ColumnListItem vAlign="Middle" type="Navigation" press="onAdjust">
										<cells>
											<!-- Articulo -->
											<Text text="{stock_Model>Matnr}" wrapping="true" textAlign="Begin"/>
											<!-- Marca -->
											<Text text="{stock_Model>Marca}" wrapping="true" textAlign="Begin"/>
											<!-- Descricpion -->
											<Text text="{stock_Model>Descripcion}" wrapping="true" textAlign="Begin"/>
											<!-- Cantidad de Stock -->
											<!--<Text text="{stock_Model>Stock}" wrapping="true" textAlign="Begin"/>-->
											<!--<Text text="{path:  'stock_Model>Stock', formatter: '.formatter.formatAmount'}" wrapping="true" textAlign="Begin"/>-->
											<Text text="{path: 'stock_Model>Stock', type: 'sap.ui.model.type.Float', formatOptions: { maxFractionDigits: 0 } }" wrapping="true"
												textAlign="Begin"/>
											<!-- Ultima Venta -->
											<Text text="{path: 'stock_Model>UltVenta' , type: 'sap.ui.model.type.Date' , formatOptions: { pattern: 'dd/MM/yyyy'}}" wrapping="true"
												textAlign="Begin"/>
											<!-- Ultima entrada de Mercancias -->
											<Text text="{path: 'stock_Model>UltEm' , type: 'sap.ui.model.type.Date' , formatOptions: { pattern: 'dd/MM/yyyy'}}" wrapping="true"
												textAlign="Begin"/>
											<!-- Ultimo Inventario -->
											<Text text="{path: 'stock_Model>UltInv' , type: 'sap.ui.model.type.Date' , formatOptions: { pattern: 'dd/MM/yyyy'}}" wrapping="true"
												textAlign="Begin"/>
											<Text text="{stock_Model>Mtarttext} ({stock_Model>Mtart})" wrapping="true" textAlign="Begin"/>
											<Text text="{stock_Model>Matkl}" wrapping="true" textAlign="Begin"/>
										</cells>
									</ColumnListItem>
								</items>
								<!-- Fin Filas -->
								<!-- Inicio Columnas -->
								<columns >
									<!-- Articulo -->
									<Column id="Articulo" hAlign="Initial" demandPopin="false"  width="auto" vAlign="Middle" >
										<header>
											<Label text="{i18n>articulo}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Marca -->
									<Column id="Marca" hAlign="Initial"  demandPopin="false" width="auto" vAlign="Middle" minScreenWidth="Tablet">
										<header>
											<Label text="{i18n>marca}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Descripcion -->
									<Column id="Descripcion" hAlign="Initial" demandPopin="false"  width="auto" vAlign="Middle" >
										<header>
											<Label text="{i18n>descripcion}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Cantidad de Stock -->
									<Column id="canStock" hAlign="Initial"  demandPopin="false"  width="auto" vAlign="Middle">
										<header>
											<Label text="{i18n>cantStock}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Ultima Venta -->
									<Column id="ultVenta" hAlign="Initial" demandPopin="false" width="auto" vAlign="Middle" minScreenWidth="Tablet">
										<header>
											<Label text="{i18n>ultVenta}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Ultima entrada de Mercancias -->
									<Column id="ultEntradaMercancias" hAlign="Initial" demandPopin="false" width="auto" vAlign="Middle" minScreenWidth="Tablet">
										<header>
											<Label text="{i18n>ultEntradaMercancias}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Ultimo Inventario -->
									<Column id="ultInventario" hAlign="Initial" demandPopin="false" width="auto" vAlign="Middle" minScreenWidth="Tablet">
										<header>
											<Label text="{i18n>ultInventario}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- SecciÃ³n -->
									<Column id="Sec" hAlign="Initial" demandPopin="false" width="auto" vAlign="Middle" minScreenWidth="Tablet">
										<header>
											<Label text="{i18n>Sec}" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
									<!-- Grupo Articulo -->
									<Column id="groupArtic" hAlign="Initial" demandPopin="false" width="auto" vAlign="Middle" minScreenWidth="Tablet">
										<header>
											<Label text="Grupo Articulo" textAlign="Center" wrapping="true"/>
										</header>
									</Column>
								</columns>
								<!-- Fin Columnas -->
							</Table>
						<!--</ScrollContainer>-->
						<!-- Fin  Tabla -->
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>