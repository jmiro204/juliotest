<mvc:View controllerName="app.inetum.zcarconsulta2.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Head" persistencyKey="SmartFilter_Explored">
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
		</semantic:headerContent>
		<semantic:content>
			<!--initiallyVisibleFields="Businessdaydate,Retailstoreid,Workstationid,Transnumber,Transtypecode,Operatorid,Begintimestamp,CreatedBy"-->
			<smartTable:SmartTable id="smartHead" entitySet="Head" smartFilterId="smartFilterBar" showRowCount="true" enableAutoBinding="false"
				tableType="ResponsiveTable" beforeRebindTable="onBeforeRebindTable" ignoredFields="Zzformpag,Zzformpagv,zzFormpagvtext,Trxanul,Transnumber,Workstationid">
				<smartTable:customToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://delete" text="Baja de transacción" press="onExecuteBajaTrx"/>
						<Button icon="sap-icon://activate" text="Deshacer Baja de transacción Manual" press="onExecuteDeshacerBaja"/>
						<!--	<Button icon="sap-icon://eraser" text="Revertir cambios" press="onExecuteDeshacer"/>-->
					</Toolbar>
				</smartTable:customToolbar>
				<Table id="table" mode="SingleSelectLeft" selectionChange="" growing="true">
					<items>
						<ColumnListItem type="Active" vAlign="Middle" navigated="true" press="onRowSelectTable"></ColumnListItem>
					</items>
				</Table>
				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>