<mvc:View controllerName="app.inetum.zcarauditinciv2.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:headerContent>
			<!--id="smartFilterBar" -->
			<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="Incidencias" persistencyKey="SmartFilter_Explored">
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
		</semantic:headerContent>
		<semantic:content>
			<smartTable:SmartTable id="smarTableInci" entitySet="Incidencias" smartFilterId="smartFilterBar" showRowCount="true" enableAutoBinding="true"
				tableType="ResponsiveTable" beforeRebindTable="onBeforeRebindTable">
				<smartTable:customToolbar>
					<OverflowToolbar >
						<ToolbarSpacer/>
						<Button id="deleteButton" text="{i18n>masterDelete}" press="onDelete" icon="sap-icon://delete" enabled="false" visible="false"/>
						<Button id="createButton" text="{i18n>masterCreate}" press="onCreate" icon="sap-icon://create"/>
						<Button id="aproveButton" text="{i18n>masterAprov}" press="onAprov" icon="sap-icon://accept" enabled="false" visible="false"/>
					</OverflowToolbar>
				</smartTable:customToolbar>
				<Table id="table" mode="MultiSelect"  growing="true">
					<items>
						<ColumnListItem type="Navigation" vAlign="Middle" navigated="true" press="onRowSelectTable"/>
					</items>
				</Table>
				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>
		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id="shareTile" title="{worklistView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
	</semantic:SemanticPage>
</mvc:View>