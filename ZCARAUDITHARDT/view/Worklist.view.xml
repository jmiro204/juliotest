<mvc:View controllerName="app.inetum.zcaraudithardt.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core">
	<semantic:SemanticPage id="page" headerPinnable="true" toggleHeaderOnTitleClick="true">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search="onSearch" filterChange="onFilterChange"
				afterVariantLoad="onAfterVariantLoad">
				<fb:filterGroupItems>
					<fb:FilterGroupItem name="Name" label="Periodo de venta" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<DatePicker id="Businessdaydate" change="handleChange" class="sapUiSmallMarginBottom" width="10em"
								value="{ 'path': 'worklistView>/Businessdaydate', 'type': 'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd/MM/yyyy' } }"/>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem name="Category" label="Centro" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<ComboBox forceSelection="false" selectedKey="{worklistView>/Retailstoreid}" change="onChangeStoreId"
								items="{ path: '/zcds_audit_storeid_vh', sorter: { path: 'Retailstoreid' } }">
								<core:Item key="{Retailstoreid}" text="{RetailstoreidText} - {Retailstoreid}"/>
							</ComboBox>
						</fb:control>
					</fb:FilterGroupItem>
						<fb:FilterGroupItem name="Terminal" label="Terminal" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<Input value="{worklistView>/Workstationid}" maxLength="4" liveChange="onChangeValue"/>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem name="Edificio" label="Edificio" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<Input value="{worklistView>/Edificio}" maxLength="3" liveChange="onChangeValue"/>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem name="Planta" label="Planta" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<Input value="{worklistView>/Planta}" maxLength="3" liveChange="onChangeValue"/> 
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem name="Tipo" label="Tipo V.T.T" groupName="Group1" visibleInFilterBar="true">
						<fb:control>
							<Vbox>
								<CheckBox text="Original" selected="{worklistView>/Original}"/>
								<CheckBox text="Modificado" selected="{= ${worklistView>/Original} ? false : true }" select="onChangeModiBox"/>
							</Vbox>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</semantic:headerContent>
		<semantic:content>
			<IconTabBar id="idIconTabBarFiori2" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" select="onChangeTabBar">
				<items>
					<IconTabFilter text="VENTA NETA" key="vtan">
						<core:Fragment fragmentName="app.inetum.zcaraudithardt.view.fragments.vtaNeta" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="VENTA ORIGINAL" key="vtaa">
						<core:Fragment fragmentName="app.inetum.zcaraudithardt.view.fragments.vtaOriginal" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="ANULACIONES ADM." key="vtan">
						<core:Fragment fragmentName="app.inetum.zcaraudithardt.view.fragments.vtaAnul" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="MOVIMIENTOS DE CAJA" key="vtan">
						<core:Fragment fragmentName="app.inetum.zcaraudithardt.view.fragments.vtaMov" type="XML"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>
		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id="shareTile" title="{worklistView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
	</semantic:SemanticPage>
</mvc:View>