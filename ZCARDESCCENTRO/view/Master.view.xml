<mvc:View controllerName="app.inetum.ZCARDESCENTRO.controller.Master" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:semantic="sap.m.semantic">
	<semantic:MasterPage id="page" navButtonPress="onNavBack" showNavButton="true">
		<!-- title="{masterView>/title}"-->
		<semantic:subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{= !${device>/support/touch} }" tooltip="{i18n>masterSearchTooltip}" width="100%"
						search="onSearch"></SearchField>
				</contentMiddle>
				<contentRight>
					<Button tooltip="Open Date Picker" icon="sap-icon://appointment-2" press=".onOpenDatePicker"/>
				</contentRight>
			</Bar>
		</semantic:subHeader>
		<semantic:content>
			<Title text="{masterView>/title}" class="classCountTitle"/>
			<PullToRefresh id="pullToRefresh" visible="{device>/support/touch}" refresh="onRefresh"/>
			<!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
			<!--items="{ path: '/Header',parameters:{expand:'to_Tpv,to_Tpvrech'}, sorter: { path: 'Retailstoreid', descending: false }, groupHeaderFactory: '.createGroupHeader' }"-->
			<!--items="{ path: '/Header',sorter: [{ path: 'Retailstoreid', descending: false }, { path: 'TotalTermDesc', descending: true }], groupHeaderFactory: '.createGroupHeader' }"-->
			<List id="list" items="{ path: '/Header',sorter: [{ path: 'TotalTermDesc', descending: true }], groupHeaderFactory: '.createGroupHeader' }"
				busyIndicatorDelay="{masterView>/delay}" noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" growing="true" growingScrollToLoad="true" growingThreshold="100"
				updateFinished="onUpdateFinished" selectionChange="onSelectionChange">
				<infoToolbar>
					<Toolbar active="true" id="filterBar" visible="{masterView>/isFilterBarVisible}" press="onOpenViewSettings">
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}"/>
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}" press="onSelectionChange" class="myBlueTitle"
						icon="sap-icon://retail-store" title="{RetailstoreidText}({ path:'Retailstoreid', formatter: '.formatter.formatStore'})">
						<attributes>
							<!--text="{to_Tpv/Zzcount}"-->
							<ObjectAttribute title="{i18n>txtTermDesc}" text="{ path:'TotalTermDesc', formatter: '.formatter.formCount'}"/>
							<ObjectAttribute title="Terminales Descuadrados - Importe" text="{ path:'TotalTermDesc', formatter: '.formatter.formCount'}"/>
							<ObjectAttribute title="Terminales Descuadrados - Trx" text="{ path:'DescTrxTerm', formatter: '.formatter.formCount'}"/>
							<ObjectAttribute title="Descuadre x MP"
								text="{path:'Valordesc', type:'sap.ui.model.type.Float', formatOptions: { maxIntegerDigits: 13, maxFractionDigits: 2, preserveDecimals: true }, constraints:{ precision:13, scale:2 }}"/>
							<ObjectAttribute title="Descuadre x TOTAL"
								text="{path:'ValorDescTot', type:'sap.ui.model.type.Float', formatOptions: { maxIntegerDigits: 13, maxFractionDigits: 2, preserveDecimals: true }, constraints:{ precision:13, scale:2 }}"/>
							<!--{Zzcount2}-->
							<ObjectAttribute title="Cantidad Op. Rechazadas" text="{ path:'CntOpRechazadas', formatter: '.formatter.formCount'}"/>
							<ObjectAttribute title="Importe Op. Rechazadas"
								text="{path:'Imptotalrechazo', type:'sap.ui.model.type.Float', formatOptions: { maxIntegerDigits: 13, maxFractionDigits: 2, preserveDecimals: true }, constraints:{ precision:13, scale:2 }}"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
	</semantic:MasterPage>
</mvc:View>