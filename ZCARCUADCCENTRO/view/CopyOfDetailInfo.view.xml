<mvc:View controllerName="app.inetum.ZCARCUADCENTRO.controller.DetailInfo" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:smartTable="sap.ui.comp.smarttable">
	<semantic:DetailPage id="page" navButtonPress="onBackPress" showNavButton="true"
		title="{i18n>txtStore} {Tpv>/RetailstoreidText}({Tpv>/Retailstoreid}) - TPV: {Tpv>/WorkstationidView} - { 'path':'Tpv>/Auditbusinessdaydate', 'type':'sap.ui.model.type.Date', 'formatOptions': { 'pattern': 'dd-MM-yyyy' } }"
		busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">
		<semantic:content>
			<ObjectHeader id="idObjectRangeTrx" title="{i18n>txtRangeTrx} " responsive="true"/>
			<ScrollContainer >
				<smartTable:SmartTable id="SmartTable" entitySet="Desgtpv" navButtonPress="onNavBack" tableType="ResponsiveTable" useExportToExcel="true"
					beforeExport="onBeforeExport" useVariantManagement="true" useTablePersonalisation="false" header="" showRowCount="false"
					beforeRebindTable="onBeforeRebindTable" persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true" demandPopin="true"
					enableAutoColumnWidth="true">
					<smartTable:customToolbar>
						<OverflowToolbar design="Transparent">
							<Text id="idHardTotal" class="customTextHardTotal"/>
							<ToolbarSpacer/>
							<!--	<Button text="Mostrar todos" id="showdesc" press="onShowTrxDesc(false)"/>
						    <Button text="Mostrar solo descuadres" id="hidedesc" press="onShowTrxDesc(true)"/>-->
						</OverflowToolbar>
					</smartTable:customToolbar>
					<smartTable:layoutData>
						<FlexItemData growFactor="1" baseSize="0%"/>
					</smartTable:layoutData>
				</smartTable:SmartTable>
				<Toolbar>
					<ToolbarSpacer/>
					<Button text="{i18n>txtGoForz}" id="ForzTerm" press="onNavigateToOtherView"/>
					<Button text="{i18n>txtGoCorr}" press="onNavigateToOtherView"/>
				</Toolbar>
				<!--<Table growing="true" growingThreshold="9999"/>-->
			</ScrollContainer>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
